<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/background"
  android:focusable="true" android:focusableInTouchMode="true">
  <TextView 
  		android:id="@+id/header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:paddingLeft="20dip"
		android:paddingTop="7dip"
		android:paddingBottom="7dip"
		android:text="PennMeet"
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="@android:color/white"
		android:background="@drawable/header"/>
	  <ViewFlipper
	  	android:id="@+id/flipper"
	  	android:layout_below="@id/header"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	>
	  	<RelativeLayout
	  			android:id="@+id/group_send_receive"
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:gravity="center">
	  			<Button 
	  				android:id="@+id/group_bump_send"
	  				android:layout_width="fill_parent"
	  				android:layout_height="wrap_content"
	  				android:layout_marginRight="30dip"
	  				android:layout_marginLeft="30dip"
	  				android:text="Send Group Info"
	  				android:textColor="@android:color/white"
	  				android:textStyle="bold"
	  				android:textSize="16sp"
	  				android:background="@drawable/button_selector"
	  				android:padding="10dip"
	  				android:onClick="onClick"/>
	  			<Button 
	  				android:id="@+id/group_bump_receive"
	  				android:layout_width="fill_parent"
	  				android:layout_height="wrap_content"
	  				android:layout_marginRight="30dip"
	  				android:layout_marginLeft="30dip"
	  				android:layout_below="@id/group_bump_send"
	  				android:layout_marginTop="20dip"
	  				android:text="Receive Group Info"
	  				android:textColor="@android:color/white"
	  				android:textStyle="bold"
	  				android:textSize="16sp"
	  				android:background="@drawable/button_selector"
	  				android:padding="10dip"
	  				android:onClick="onClick"/>
	  			</RelativeLayout>
	  	<RelativeLayout
	  			android:id="@+id/group_list_layout"
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent">
	  			<ListView 
	  				android:id="@+id/group_list"
	  				android:layout_width="fill_parent"
	  				android:layout_height="fill_parent"
	  				android:cacheColorHint="#00000000">
	  				</ListView>
	  			</RelativeLayout>
	  			
	  		<RelativeLayout
	  			android:id="@+id/event_entry_layout"
	  			android:layout_width="fill_parent"
	  			android:layout_height="fill_parent">
				<ImageView
					android:id="@+id/bump_icon"
					android:layout_width="160dip"
					android:layout_height="160dip"
					android:background="@drawable/bump"
					android:layout_centerInParent="true"/>
				<TextView
					android:layout_width="wrap_content"	
					android:layout_height="wrap_content"
					android:layout_below="@id/bump_icon"
					android:layout_marginTop="20dip"
					android:layout_centerHorizontal="true"
					android:text="Waiting for bump..."
					android:textStyle="bold"
					android:textColor="@android:color/white"
					android:textSize="16sp"/>		  
			</RelativeLayout>
		</ViewFlipper>
					
</RelativeLayout>
